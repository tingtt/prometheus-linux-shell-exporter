[Unit]
Description=Linux Shell Exporter
Documentation=https://github.com/tingtt/prometheus-linux-shell-exporter
After=network-online.target

[Service]
EnvironmentFile=/etc/default/prometheus-linux-shell-exporter
ExecStart=/usr/local/bin/prometheus-linux-shell-exporter -config.file ${ETC_DIR}/linuxsh.yml -port ${PORT}
ExecStop=/bin/kill -TERM ${MAINPID}
ExecReload=/bin/kill -HUP ${MAINPID}
Restart=always

[Install]
WantedBy=multi-user.target